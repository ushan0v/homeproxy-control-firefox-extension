{
  "manifest_version": 3,
  "name": "HomeProxy Control",
  "version": "0.1.10",
  "description": "Control HomeProxy routes and inspect active tab network traffic.",
  "action": {
    "default_title": "HomeProxy Control",
    "default_popup": "index.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; worker-src 'self';"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "service_worker": "background.js"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "homeproxy-control@local",
      "strict_min_version": "109.0"
    }
  }
}
